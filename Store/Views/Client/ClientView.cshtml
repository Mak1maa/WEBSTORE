@model IEnumerable<Store.Models.Client>

@{
    Layout = null;
}

<!-- Представление заказов за всё время -->

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title> Список заказов </title>
    <link href="~/Content/bootstrap.css" rel="stylesheet" />
    <link href="~/Content/bootstrap-theme.css" rel="stylesheet" />
    <style>
        .btn a {
            color: white;
            text-decoration: none;
        }

        body {
            background-color: #F1F1F1;
        }

        h2 {
            line-height: 1.5;
        }
    </style>
</head>
<body>
    <div class="navbar navbar-inverse navbar-fixed-top">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                @Html.ActionLink("Интернет-магазин различных вещей",
               "Index", "Product", new { area = "" }, new { @class = "navbar-brand" })
            </div>
            <div class="text-right" style="margin-top: 8px">
                <div class="btn btn-success">
                    @Html.ActionLink("Вернуться к панели администратора", "../Admin/Index")
                </div>
            </div>
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav">
                </ul>
            </div>
        </div>
    </div>
    <div class="text-left" style="margin-top: 80px; margin-left: 61px; margin-right: 61px;">
        @foreach (var line in Model)
        {
            <div class="well">
                <h3>
                    <strong>Заказ #@line.ClientNum</strong>
                </h3>
                <span class="lead">
                    <div>Имя: @line.Name</div>
                    <div>Фамилия: @line.Surname</div>
                    <div>Отчество: @line.Patronymic</div>
                    <div>Email: @line.Email</div>
                    <div>Телефон: @line.Phone</div>
                    @for (int i = 0; i < line.products.Count; i++)
                    {
                        <div style="margin-top: 10px; margin-bottom: 20px;">
                            <strong> Заказано: </strong>
                            <div>Товар: @line.products[i].Product.Name</div>
                            <div>Цена: @line.products[i].Product.Price</div>
                            <div>Описание: @line.products[i].Product.Description</div>
                            <div>Кол-во заказанного: @line.products[i].Quantity</div>
                        </div>
                    }
                </span>
            </div>
        }
    </div>
</body>
</html>