@model Store.Models.Product

@{
    ViewBag.Title = "Информация";
}

<!-- Представление добавленного товара. Вывод о добавленном товаре. -->

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title> Информация </title>
    <link href="~/Content/bootstrap.css" rel="stylesheet" />
    <link href="~/Content/bootstrap-theme.css" rel="stylesheet" />
    <style>
        .btn a {
            color: white;
            text-decoration: none;
        }

        body {
            background-color: #F1F1F1;
        }

        h2 {
            line-height: 1.5;
        }
    </style>
</head>
<body>
    <div class="navbar navbar-inverse navbar-fixed-top">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                @Html.ActionLink("Интернет-магазин различных вещей",
               "Index", "Product", new { area = "" }, new { @class = "navbar-brand" })
            </div>
            <div class="text-right" style="margin-top: 8px">
                <div class="btn btn-success">
                    @Html.ActionLink("Вернуться к панели администратора", "../Admin/Index")
                </div>
            </div>
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav">
                </ul>
            </div>
        </div>
    </div>
    <h2> Продукт "@Model.Name" добавлен </h2>
    <div class="btn btn-success" style="margin-top: 10px;">
        @Html.ActionLink("Вернуться к добавлению товара", "../Admin/AddProductForm")
    </div>
</body>
</html>